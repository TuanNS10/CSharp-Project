<Window x:Class="CakeShop.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CakeShop"
        mc:Ignorable="d"
        Title="SplashScreen" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Images/Background.png"/>
    </Window.Background>
    <Canvas>
        <Image Source="Images/shop1.jpg"  Width="800" Height="300"/>
        <CheckBox Content="Do not show this dialog again" Canvas.Left="292" Canvas.Top="298" Checked="CheckBox_Checked"/>
        <Button x:Name="okButton" IsDefault="True" Click="okButton_Click" Content="Close" Canvas.Left="347" Canvas.Top="336" Width="80" Height="43"/>
    </Canvas>
</Window>
